<script src="~/Scripts/UserProfile/userProfile.js"></script>
<div ng-controller="userProfileController">
    <h1>My Profile</h1>
    <div ng-repeat="question in questions">
        <h3>{{question.ID}}. {{question.Text}}</h3>
        <form name="answers" ng-if="question.Answers.length > 0">
            <div ng-repeat="answer in question.Answers">
                <input type="checkbox" ng-model="answer.Text" ng-value="answer.ID" /> {{answer.Text}} 
            </div>
        </form>
        <input type="date" ng-model="answer.Text" ng-if="question.Answers.length == 0"/>
    </div>
</div>