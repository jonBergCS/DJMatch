@model IEnumerable<DJMatch.Models.DJ>

@{
    ViewBag.Title = "Index";
}

<h2>Optinal DJs</h2>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
    <div class="w3-row-padding w3-grayscale">
        @foreach (var item in Model)
        {
            <div class="w3-col l3 m6 w3-margin-bottom">
                <img src="~/Content/Images/icon.png" class="photo">
                <h3>DJ @Html.DisplayFor(modelItem => item.Name)</h3>
                <p class="w3-opacity">@Html.DisplayFor(modelItem => item.ExperienceYears) years of experience</p>
                <p class="w3-opacity">@Html.DisplayFor(modelItem => item.PriceMin) $ - @Html.DisplayFor(modelItem => item.PriceMax) $</p>
                <p class="w3-opacity">Plays @Html.DisplayFor(modelItem => item.Genres)</p>
                <p> @Html.ActionLink("Details", "Details", new { id = item.ID })</p>
            </div>
        }

    </div>
</body>