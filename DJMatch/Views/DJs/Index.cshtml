
<script src="~/Scripts/DJs/djs.js"></script>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
    <div ng-controller="djsController">
        <h1>Optinal DJs</h1>
        <div class="w3-row-padding w3-grayscale">
            <div ng-repeat="currentDJ in djsList" class="w3-col l3 m6 w3-margin-bottom">
                <img src="~/Content/Images/icon.png" class="photo">
                <h3>DJ {{currentDJ.Name}}</h3>
                <p class="w3-opacity">{{currentDJ.ExperienceYears}} years of experience</p>
                <p class="w3-opacity">{{currentDJ.PriceMin}}$ - {{currentDJ.PriceMax}}$</p>
                <p class="w3-opacity">Plays {{currentDJ.Genres}}</p>
                <p> <a href="~/DJs/Details/{{currentDJ.ID}}" rel="search">Details</a></p>
            </div>

        </div>
    </div>
</body>