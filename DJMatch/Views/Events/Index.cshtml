
<script src="~/Scripts/Events/usersEventsController.js"></script>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
<div ng-controller="usersEventsController">
    <h1>My Events</h1>
    
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Type of event</th>
            <th>Name</th>
            <th>Description</th>
            <th>DJ's Name</th>
            <th>playlist's Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <tr ng-repeat="currEvent in eventsList">
                <td>{{ currEvent.Date }}</td>
                <td>{{ currEvent.EventType }}</td>
                <td>{{ currEvent.Name }}</td>
                <td>{{ currEvent.Description }}</td>
                <td>{{ currEvent.DJName }}</td>
                <td>{{ currEvent.playlist.Name }}</td>
                <td ng-click="displayPlaylist(currEvent.playlist)"> <a href="~/Playlists/Details">Playlist's Details</a></td>
            </tr>
        </tbody>
    </table>
</div>
</body>
