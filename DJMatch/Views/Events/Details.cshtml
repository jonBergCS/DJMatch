<script type="text/javascript" src="~/Scripts/Events/eventDetailsController.js"></script>
<script src="~/Scripts/DJs/DjPlaylistDirective.js"></script>
<div ng-controller="eventDetailsController">
    <h2>{{currEvent.Name}}</h2>

    <div>
        <dl class="dl-horizontal">
            <dt>
                Date
            </dt>

            <dd>
                {{currEvent.Date}}
            </dd>

            <dt>
                EventType
            </dt>

            <dd>
                {{currEvent.EventType}}
            </dd>

            <dt>
                Name
            </dt>

            <dd>
                {{currEvent.Name}}
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                {{currEvent.Description}}
            </dd>

            <dt>
                DJ name
            </dt>

            <dd>
                {{DJ.Name}}
            </dd>
        </dl>
    </div>
    <div>
        <dj-playlist-directive playlist="{ID:1}" editable=true></dj-playlist-directive>
    </div>
    <p>
        <span>back to my events list</span>
    </p>
</div>